<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FazerReserva" android:background="@color/fundo">

    <TextView
            android:text="Fazer Reserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="36sp"/>
    <TextView
            android:text="Quantas pessoas?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:textSize="18sp"/>
    <TextView

            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPessoas" app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="@+id/textView4" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:textSize="24sp"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/button"
            android:onClick="btnMenos"
            app:layout_constraintTop_toTopOf="@+id/tvPessoas" app:layout_constraintBottom_toBottomOf="@+id/tvPessoas"
            android:background="#00000000" app:layout_constraintEnd_toStartOf="@+id/tvPessoas"
            android:layout_marginEnd="24dp" android:layout_marginRight="24dp" android:textSize="30sp"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/button2"
            android:onClick="btnMais"
            app:layout_constraintTop_toTopOf="@+id/tvPessoas" app:layout_constraintBottom_toBottomOf="@+id/tvPessoas"
            android:textSize="30sp" android:background="#00000000" app:layout_constraintStart_toEndOf="@+id/tvPessoas"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp"/>
    <TextView
            android:text="Que dia?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tvPessoas" android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Que horas?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:textSize="18sp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tvDia"/>
    <TextView
            android:text="00/00/0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDia" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="24sp"/>
    <Button
            android:text="Reservar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnSalvar" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:background="@color/fundo_botao"/>
    <TextView
            android:text="00h00m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvHora" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="24sp"/>
</android.support.constraint.ConstraintLayout>