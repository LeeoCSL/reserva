<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:background="@drawable/bordas" android:layout_margin="8dp">


        <TextView
                android:text="Nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_nome"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/layout_quantidade" android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp"
                android:textSize="18sp"/>
        <TextView
                android:text="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_quantidade"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="30sp" android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/textView5"
                app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintEnd_toEndOf="@+id/textView5" android:layout_marginTop="16dp"/>
        <TextView
                android:text="pessoas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_quantidade"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" android:layout_marginBottom="16dp"/>
        <TextView
                android:text="Dia: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_dia" app:layout_constraintStart_toEndOf="@+id/layout_nome"
                android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:textSize="18sp"/>
        <TextView
                android:text="00h00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_hora"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp" android:layout_marginRight="32dp" android:textSize="18sp"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>